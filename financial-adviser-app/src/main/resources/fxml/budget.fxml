<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.financialadviser.controller.BudgetController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20">
        <!-- Left side: Budget List -->
        <VBox spacing="10" minWidth="300">
            <Label text="Budgets" styleClass="section-title"/>
            
            <GridPane vgap="5" hgap="5">
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="budgetNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                
                <Label text="Total Amount:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="totalAmountField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                
                <Button text="Create Budget" onAction="#handleCreateBudget" 
                        GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="primary-button"/>
            </GridPane>
            
            <TableView fx:id="budgetTable" VBox.vgrow="ALWAYS"/>
        </VBox>

        <!-- Right side: Budget Details -->
        <VBox spacing="10" HBox.hgrow="ALWAYS" fx:id="budgetDetailsPane">
            <!-- Categories Section -->
            <VBox spacing="5">
                <Label text="Categories" styleClass="section-title"/>
                
                <GridPane vgap="5" hgap="5">
                    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="categoryNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="categoryAmountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Button text="Add Category" onAction="#handleAddCategory"
                            GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="primary-button"/>
                </GridPane>
                
                <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Transactions Section -->
            <VBox spacing="5">
                <Label text="Transactions" styleClass="section-title"/>
                
                <GridPane vgap="5" hgap="5">
                    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="transactionDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="transactionAmountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="transactionTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Button text="Add Transaction" onAction="#handleAddTransaction"
                            GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="primary-button"/>
                </GridPane>
                
                <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Summary Section -->
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Label fx:id="totalSpentLabel" styleClass="summary-label"/>
                <Label fx:id="remainingAmountLabel" styleClass="summary-label"/>
            </HBox>
        </VBox>
    </HBox>
</VBox> 