<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.financialadviser.controller.DashboardController">
    
    <VBox spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Summary Cards -->
        <HBox spacing="20">
            <!-- Budget Summary -->
            <VBox styleClass="summary-card" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Budget Overview" styleClass="card-title"/>
                <Label fx:id="totalBudgetLabel" text="$0.00"/>
                <Label fx:id="totalSpentLabel" text="$0.00"/>
                <Label fx:id="remainingBudgetLabel" text="$0.00"/>
                <ProgressBar fx:id="budgetProgressBar" progress="0.0" maxWidth="Infinity"/>
            </VBox>

            <!-- Investment Summary -->
            <VBox styleClass="summary-card" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Investment Overview" styleClass="card-title"/>
                <Label fx:id="totalInvestedLabel" text="$0.00"/>
                <Label fx:id="investmentReturnsLabel" text="$0.00"/>
                <Label fx:id="currentValueLabel" text="$0.00"/>
                <Label fx:id="returnRateLabel" text="0.00%"/>
            </VBox>

            <!-- Debt Summary -->
            <VBox styleClass="summary-card" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Debt Overview" styleClass="card-title"/>
                <Label fx:id="totalDebtLabel" text="$0.00"/>
                <Label fx:id="monthlyPaymentLabel" text="$0.00"/>
                <Label fx:id="debtFreeLabel" text="N/A"/>
                <ProgressBar fx:id="debtProgressBar" progress="0.0" maxWidth="Infinity"/>
            </VBox>

            <!-- Goals Summary -->
            <VBox styleClass="summary-card" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Goals Overview" styleClass="card-title"/>
                <Label fx:id="totalGoalsLabel" text="$0.00"/>
                <Label fx:id="goalsProgressLabel" text="0%"/>
                <Label fx:id="nextGoalLabel" text="N/A"/>
                <ProgressBar fx:id="goalsProgressBar" progress="0.0" maxWidth="Infinity"/>
            </VBox>
        </HBox>

        <!-- Charts Section -->
        <HBox spacing="20">
            <!-- Expense Distribution -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Expense Distribution" styleClass="section-title"/>
                <PieChart fx:id="expenseDistributionChart" title="Expenses by Category"/>
            </VBox>

            <!-- Asset Allocation -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Asset Allocation" styleClass="section-title"/>
                <PieChart fx:id="assetAllocationChart" title="Investment Distribution"/>
            </VBox>
        </HBox>

        <!-- Net Worth Trend -->
        <VBox spacing="10">
            <Label text="Net Worth Trend" styleClass="section-title"/>
            <LineChart fx:id="netWorthChart" title="Net Worth Over Time">
                <xAxis>
                    <CategoryAxis label="Time"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Amount ($)"/>
                </yAxis>
            </LineChart>
        </VBox>

        <!-- Detailed Sections -->
        <HBox spacing="20">
            <!-- Debt Details -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Debt Details" styleClass="section-title"/>
                <Label fx:id="monthlyDebtPaymentLabel" text="Monthly Payment: $0.00"/>
                <Label fx:id="debtFreeDateLabel" text="Debt Free Date: N/A"/>
                <Label fx:id="debtPayoffProgressLabel" text="Progress: 0%"/>
                <PieChart fx:id="debtDistributionChart" title="Debt Distribution"/>
            </VBox>

            <!-- Investment Details -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Investment Details" styleClass="section-title"/>
                <Label fx:id="totalInvestmentsLabel" text="Total Investments: $0.00"/>
                <Label fx:id="portfolioAllocationLabel" text="Portfolio Allocation"/>
                <PieChart fx:id="investmentDistributionChart" title="Investment Distribution"/>
            </VBox>
        </HBox>

        <!-- Goals and Budget -->
        <HBox spacing="20">
            <!-- Goals Details -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Goals Details" styleClass="section-title"/>
                <PieChart fx:id="goalDistributionChart" title="Goals Distribution"/>
            </VBox>

            <!-- Budget Details -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Budget Details" styleClass="section-title"/>
                <Label fx:id="monthlyBudgetLabel" text="Monthly Budget: $0.00"/>
                <Label fx:id="budgetProgressLabel" text="Progress: 0%"/>
                <PieChart fx:id="budgetDistributionChart" title="Budget Distribution"/>
            </VBox>
        </HBox>
    </VBox>
</ScrollPane> 